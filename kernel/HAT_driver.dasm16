JSR HAT_find_free_sector
JSR HAT_allocate_sector
SET B, A
SET A, I
JSR HAT_join_sectors
SET I, B
SET B, POP
SET C, 16
SUB C, B
SET B, C
SET A, Y
JSR stackpush
SET A, I
SET C, 0
JSR HAT_write_sector_stack
SET PC, HAT_inode_directory_add_link_end

