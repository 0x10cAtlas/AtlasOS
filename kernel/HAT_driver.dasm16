SET A, 0
SET B, 4
JSR math_ABaddXY
SET X, A
SET Y, B
ADD PEEK, 16
ADD PICK 1, EX
SET A, PICK 6
SET B, 4
SET C, 0
JSR HAT_write_sector_stack
SET A, PICK 2
IFG Z, 0
JSR HAT_find_strip_end
SET B, Y
MOD B, [HAT_sector_size]
SET C, B
SET I, A

SET Y, PEEK
SET PUSH, PICK 1 ; push link inode
